<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Import Condition="Exists('Package.props')" Project="Package.props" />
	<Target
		Name="CopyBinaries"
		AfterTargets="AfterBuild"
		Condition="@(BinariesToCopy) != '' AND Exists('bin')"
	>
		<Message
			Importance="high"
			Text="Copying EPiServer-binaries to bin."
		/>
		<Copy
			DestinationFiles="@(BinariesToCopy->'bin\%(RecursiveDir)%(Filename)%(Extension)')"
			SkipUnchangedFiles="true"
			SourceFiles="@(BinariesToCopy)"
		/>
	</Target>
</Project>