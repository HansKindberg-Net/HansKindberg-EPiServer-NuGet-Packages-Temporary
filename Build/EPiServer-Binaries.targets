<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<CopyEPiServerBinariesToBinDependsOn>
			BeforeCopyEPiServerBinariesToBin;
			CoreCopyEPiServerBinariesToBin;
			AfterCopyEPiServerBinariesToBin
		</CopyEPiServerBinariesToBinDependsOn>
		<CoreCopyEPiServerBinariesToBinDependsOn />
	</PropertyGroup>
	<Target Name="AfterCopyEPiServerBinariesToBin" />
	<Target Name="BeforeCopyEPiServerBinariesToBin" />
	<Target
		Name="CopyEPiServerBinariesToBin"
		AfterTargets="AfterBuild"
		DependsOnTargets="$(CopyEPiServerBinariesToBinDependsOn)"
	/>
	<Target
		Name="CoreCopyEPiServerBinariesToBin"
		Condition="@(EPiServerBinariesToCopyToBin) != '' AND Exists($(TargetDir))"
		DependsOnTargets="$(CoreCopyEPiServerBinariesToBinDependsOn)"
	>
		<Message
			Importance="$(EPiServerBinariesMessageImportance)"
			Text="Target 'CoreCopyEPiServerBinariesToBin': Copying EPiServer-binaries to bin - '@(EPiServerBinariesToCopyToBin)'."
		/>
		<Copy
			DestinationFiles="@(EPiServerBinariesToCopyToBin->'bin\%(RecursiveDir)%(Filename)%(Extension)')"
			SkipUnchangedFiles="true"
			SourceFiles="@(EPiServerBinariesToCopyToBin)"
		/>
	</Target>
</Project>